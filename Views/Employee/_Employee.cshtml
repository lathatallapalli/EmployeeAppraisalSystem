@model CoreBusiness.Employee
@{
	string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="employee" asp-action="@action">
    @if(action?.ToLower() == "editemployee")
    {
        <input type="hidden" asp-for="EmployeeId" />
    }
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="EmployeeName" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="EmployeeName" class="form-control" />
        </div>
        <div class="row">
            <div class="col-2">
                <span></span>
            </div>
            <div class="col-6">
                <span class="text-danger" asp-validation-for="EmployeeName"></span>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Mobile" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Mobile" class="form-control" />
        </div>
        @if (action?.ToLower() == "addemployee")
        {
            <div class="row">
                <div class="col-2">
                    <span></span>
                </div>
                <div class="col-6">
                    <span class="text-danger" asp-validation-for="Mobile"></span>
                </div>
            </div>
        }
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Email" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Email" class="form-control" />
        </div>
        @if (action?.ToLower() == "addemployee")
        {
            <div class="row">
                <div class="col-2">
                    <span></span>
                </div>
                <div class="col-6">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
        }
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="EmployeeDesignation" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="EmployeeDesignation" class="form-control" />
        </div>
        @if (action?.ToLower() == "addemployee")
        {
            <div class="row">
                <div class="col-2">
                    <span></span>
                </div>
                <div class="col-6">
                    <span class="text-danger" asp-validation-for="EmployeeDesignation"></span>
                </div>
            </div>
        }
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="ManagerId" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="ManagerId" class="form-control" />
        </div>
        @if (action?.ToLower() == "addemployee")
        {
            <div class="row">
                <div class="col-2">
                    <span></span>
                </div>
                <div class="col-6">
                    <span class="text-danger" asp-validation-for="ManagerId"></span>
                </div>
            </div>
        }
    </div>
    @if (action?.ToLower() == "addemployee")
    {
      <div class="row mb-3">
            <div class="col-2">
                <label asp-for="Password" class="col-form-label">Set One-Time Password</label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Password" class="form-control" />
            </div>
      </div>
      <div class="row">
            <div class="col-2">
                <span></span>
            </div>
            <div class="col-6">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
       </div>
    }
    @if (action?.ToLower() == "addemployee")
    {
        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="AdminPermission" class="col-form-label">Set Permission</label>
            </div>
            <div class="col-6">
                <select class="form-select" asp-for="@Model.AdminPermission">
                    <option selected>- Select -</option>
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <span></span>
            </div>
            <div class="col-6">
                <span class="text-danger" asp-validation-for="AdminPermission"></span>
            </div>
        </div>
    }
    <br />
    <br />
    <br />

    <div>
        @if (action?.ToLower() == "addemployee")
        {
            <input type="submit" class="btn btn-primary" value="Add"/>
        }
        @if (action?.ToLower() == "editemployee")
        {
            <input type="submit" class="btn btn-primary" value="Save"/>
        }
        <a class="btn btn-secondary" asp-controller="employee" asp-action="employeelist">Cancel</a>
    </div>
</form>
